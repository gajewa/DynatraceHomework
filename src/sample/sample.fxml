          GridPane.columnSpan="2"/>


    <Button
            text="Pobierz Nowe Dane"  GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#buttonAction"/>

    <Text fx:id="dataTextField" text="Brak danych" GridPane.columnIndex="0" GridPane.rowIndex="2"
          GridPane.columnSpan="2" />

    <ListView fx:id="numberListView" GridPane.columnIndex="0" GridPane.rowIndex="2"
              GridPane.columnSpan="2" />

</GridPane>